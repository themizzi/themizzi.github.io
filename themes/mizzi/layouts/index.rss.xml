{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $limit = $limit -}}
{{- else -}}
{{- $limit = 65536 -}}
{{- end -}}

{{- /* Get all events and discography pages */ -}}
{{- $events := where .Site.RegularPages "Section" "events" -}}
{{- $allDiscography := where .Site.AllPages "Section" "discography" -}}
{{- $discography := where $allDiscography "Params.type" "album" -}}

{{- /* Combine and sort by date */ -}}
{{- $allPages := $events | append $discography -}}
{{- $allPages = $allPages.ByDate.Reverse -}}
{{- $pages = $allPages | first $limit -}}

{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ if eq  .Title  .Site.Title }}{{ .Site.Title }}{{ else }}{{ with .Title }}{{.}} on {{ end }}{{ .Site.Title }}{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>Recent events and discography from {{ .Site.Title }}</description>
    <generator>Hugo -- gohugo.io</generator>{{ with .Site.LanguageCode }}
    <language>{{.}}</language>{{end}}{{ with .Site.Params.author.email }}
    <managingEditor>{{.}}{{ with $.Site.Params.author.name }} ({{.}}){{end}}</managingEditor>{{end}}{{ with .Site.Params.author.email }}
    <webMaster>{{.}}{{ with $.Site.Params.author.name }} ({{.}}){{end}}</webMaster>{{end}}{{ with .Site.Copyright }}
    <copyright>{{.}}</copyright>{{end}}{{ if not .Date.IsZero }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{- with .OutputFormats.Get "RSS" -}}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end -}}
    {{ range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{ with .Site.Params.author.email }}<author>{{.}}{{ with $.Site.Params.author.name }} ({{.}}){{end}}</author>{{end}}
      <guid>{{ .Permalink }}</guid>
      <description><![CDATA[{{ if eq .Section "events" }}{{/* Event content */}}
<h1>{{ .Title }}</h1>
{{ with .GetTerms "artists" }}
<p>
    {{ range $i, $artist := . }}
    {{ if $i }}, {{ end }}
    {{ with $artist }}
    <a href="{{ .Permalink }}">{{ .Title }}</a>
    {{ end }}
    {{ end }}
</p>
{{ end }}

<p>üìÖ <time datetime="{{ .Params.doors | dateFormat "2006-01-02T15:04:05-07:00" }}">{{ .Params.doors | dateFormat "January 2, 2006" }}, doors: {{ .Params.doors | dateFormat "3:04PM" }}</time></p>

{{ $locationName := "" }}
{{ $locationAddress := "" }}
{{ $locationCity := "" }}
{{ $locationState := "" }}
{{ $locationZip := "" }}
{{ $locationLink := "" }}
{{ $hasLocationTaxonomy := false }}

{{ with .GetTerms "locations" }}
    {{ range . }}
        {{ $locationName = .Title }}
        {{ $locationAddress = .Params.address }}
        {{ $locationCity = .Params.city }}
        {{ $locationState = .Params.state }}
        {{ $locationZip = .Params.zip }}
        {{ $locationLink = .Permalink }}
        {{ $hasLocationTaxonomy = true }}
    {{ end }}
{{ else }}
    {{ with .Params.location }}
        {{ $locationName = . }}
    {{ end }}
    {{ $locationAddress = .Params.address }}
    {{ $locationCity = .Params.city }}
    {{ $locationState = .Params.state }}
    {{ $locationZip = .Params.zip }}
{{ end }}

{{ if $locationName }}
<p>üèõÔ∏è 
    {{ if $hasLocationTaxonomy }}
        <a href="{{ $locationLink }}">{{ $locationName }}</a>
    {{ else }}
        {{ $locationName }}
    {{ end }}
</p>
{{ end }}

{{ if and $locationAddress $locationCity $locationState $locationZip }}
{{ $address := printf "%s, %s, %s %s" $locationAddress $locationCity $locationState $locationZip }}
<p>üìç <a href="https://www.google.com/maps/search/?api=1&query={{ $address | urlquery }}" target="_blank">{{ $address }}</a></p>
{{ end }}

{{ with .Params.link }}
<p>üîó <a href="{{ . }}" target="_blank">More Info</a></p>
{{ end }}

{{ if .Params.featured_image }}
{{ with .Resources.GetMatch .Params.featured_image }}
<a href="{{ .Permalink }}" target="_blank">
    {{ with .Resize "600x"}}
    <img src="{{ .Permalink }}" alt="{{ .Title }}" />
    {{ end }}
</a>
{{ end }}
{{ end }}

{{ if .Content }}
<div class="event-content">
    {{ .Content }}
</div>
{{ end }}

{{ else if eq .Section "discography" }}{{ if eq .Type "album" }}{{/* Album content */}}
<h1>{{ .Title }}</h1>
{{ with .GetTerms "artists" }}
<p>
    by
    {{ range $i, $artist := . -}}
    {{- if $i -}}, {{ end }}<a href="{{ .Permalink }}">{{ .Title }}</a>
    {{- end -}}
</p>
{{ end }}
{{ with .Params.releaseDate }}
<p>released on <time datetime="{{ . | dateFormat "2006-01-02" }}">{{ . | dateFormat "January 1, 2006" }}</time></p>
{{ end }}

{{ if .Params.links }}
<h3>Streaming Links</h3>
<ul>
    {{ range $key, $link := .Params.links }}
    <li>
        <a href="{{ $link }}" target="_blank">{{ $key | title }}</a>
    </li>
    {{ end }}
</ul>
{{ end }}

{{ with .Resources.Get .Params.featured_image }}
    <img src="{{ .Permalink }}" alt="{{ .Title }}" />
{{ end }}

{{ with .Pages }}
{{ with where . "Type" "track" }}
<h3>Tracklist</h3>
<ol>
    {{ range $key, $track := sort . "Weight" }}
    {{ $trackNumber := printf "%02d" $track.Weight }}
    <li value="{{ $trackNumber }}">
        {{ with $track.Params.artists }}
            {{ range $i, $artist := . }}
            {{ $artistPage := $.Site.GetPage (printf "/artists/%s" $artist) }}
            {{ with $artistPage }}
            {{ if $i }}, {{ end }}
            <a href="{{ .Permalink }}">{{ .Title }}</a>
            {{ end }}
            {{ end }}
            -
        {{ end }}
        <span>{{ $track.Title }}</span>
        (<a href="{{ .Permalink }}">details</a>)
    </li>
    {{ end }}
</ol>
{{ end }}
{{ end }}

{{ if .Content }}
<div class="album-content">
    {{ .Content }}
</div>
{{ end }}

{{ end }}{{ end }}]]></description>
      {{ if eq .Section "events" }}
      <category>Events</category>
      {{ else if eq .Section "discography" }}
      <category>Discography</category>
      {{ end }}
    </item>
    {{ end }}
  </channel>
</rss>
